 <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@300;500&display=swap" rel="stylesheet"> 
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/styles/main.css">

<div class="container-xxl px-md-5 bg-white shadow-lg">


    <%- include("partials/header.ejs") %>
<h1 class="pb-4">Recipes</h1>

<% if(locals.recipes){   %>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item active" aria-current="page"><%= recipes.name  %></li>
    </ol>
  </nav>


<div class="row">

    <div class="col-12 col-md-4">
        <img src="/uploads/<%= recipes.image %>" class="img-fluid sticky-top" style="top: 128px;" alt="<%= recipes.name %>" loading="lazy">
    </div>
    <div class="col-12 col-md-8">
        <div class="row">
            <div class="col-12"><h1><%= recipes.name %></h1></div>
            <div class="col-12 mb-4"><i class="bi bi-tag"></i><%= recipes.category %></div>
            <div class="col-12" style="white-space: pre-line;">
                <h4>Cooking Instructions</h4>
                <%= recipes.description  %>
            </div>
        </div>
        <div class="row pt-4">
            <h4>Ingredients</h4>
            <ul class="list-group list-group-flush">
                <% recipes.ingredients.forEach((ingredient)=>{ %>
                    <li class="list-group-item"><%= ingredient %></li>
                <% }) %>
            </ul>
        </div>
    </div>

</div>
<%    };   %>

<%- include("partials/footer.ejs") %>
</div>




